{
  "name": "estadoscuentaai",
  "version": "1.0.0",
  "description": "Estados de Cuenta con IA",
  "main": "main.js",
  "author": "Erick Madrigal",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.3",
    "pdfjs-dist": "^5.4.530"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.erick.estadoscuentaai",
    "productName": "EstadosCuentaAI",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.cjs",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "bin/qpdf.exe",
        "to": "bin/qpdf.exe"
      },
       { "from": "bin/mutool.exe", "to": "bin/mutool.exe" },
       { "from": "bin/*.dll", "to": "bin/" },
      { "from": ".env", "to": ".env" }
    ],
    "win": {
       "icon": "assets/icon_256x256.png",
      "target": "nsis",
      "artifactName": "EstadosCuentaAI-Setup.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EstadosCuentaAI"
    }
  }
}
